        /* Style the table */
        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }

        th,
        td {
            border: 1px solid #ddd;
            padding: 10px;
            text-align: left;
        }

        th {
            background-color: #f0f0f0;
        }

        tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        tr:hover {
            background-color: #f2f2f2;
        }

        /* Style the table header */
        thead th {
            font-weight: bold;
            font-size: 16px;
            color: #333;
        }

        /* Style the table body */
        tbody td {
            font-size: 14px;
            color: #666;
        }

        /* Add some space between table rows */
        tbody tr {
            margin-bottom: 10px;
        }

        /* Style the mechanics list */
        #record-table-body tr td:nth-child(2) {
            font-weight: bold;
            color: #337ab7;
        }
    </style>
</head>

