  <script>
    document.addEventListener("DOMContentLoaded", function () {
      const params = new URLSearchParams(window.location.search);
      const orderDetailsDiv = document.getElementById("orderDetails");

      if (params.has('name')) {
        const name = params.get('name');
        const mobile = params.get('mobile');
        const location = params.get('location');
        const vehicleType = params.get('vehicle_type');
        const description = params.get('description');
        const vehicleBrand = params.get('vehicle_brand');
        const vehicleModel = params.get('vehicle_model');
        const fuelType = params.get('fuel_type');
        const carYear = params.get('car_year');
        const serviceType = params.get('service_type');
        const servicePlaceType = params.get('service_place_type');
        const address = params.get('address');
        const serviceDate = params.get('service_date');
        const serviceTime = params.get('service_time');

        const orderData = {
          name,
          mobile,
          location,
          vehicleType,
          description,
          vehicleBrand,
          vehicleModel,
          fuelType,
          carYear,
          serviceType,
          servicePlaceType,
          address,
          serviceDate,
          serviceTime
        };

        const editIcon = document.createElement("span");
        editIcon.classList.add("material-symbols-rounded", "edit-icon");
        editIcon.textContent = "edit";
        editIcon.addEventListener("click", function () {
          renderEditableOrderDetails(orderData); // Pass orderData to the function
        });

        const deleteIcon = document.createElement("span");
        deleteIcon.classList.add("material-symbols-rounded", "delete-icon");
        deleteIcon.textContent = "delete";
        deleteIcon.addEventListener("click", function () {
          deleteOrder(orderData.mobile); // Pass mobile from orderData to the function
        });

        // Display form data
        orderDetailsDiv.innerHTML = `
            <p><strong>Name:</strong> ${name}</p>
            <p><strong>Mobile:</strong> ${mobile}</p>
            <p><strong>Location:</strong> ${location}</p>
            <p><strong>Vehicle Type:</strong> ${vehicleType}</p>
            <p><strong>Description:</strong> ${description}</p>
            <p><strong>Vehicle Brand:</strong> ${vehicleBrand}</p>
            <p><strong>Vehicle Model:</strong> ${vehicleModel}</p>
            <p><strong>Fuel Type:</strong> ${fuelType}</p>
            <p><strong>Car Year:</strong> ${carYear}</p>
            <p><strong>Service Type:</strong> ${serviceType}</p>
            <p><strong>Service Place Type:</strong> ${servicePlaceType}</p>
            <p><strong>Address:</strong> ${address}</p>
            <p><strong>Service Date:</strong> ${new Date(serviceDate).toLocaleDateString()}</p>
            <p><strong>Service Time:</strong> ${serviceTime}</p>
            <!-- Add more fields as needed -->
        `;

        // Fetch vehicle image separately
        fetch(`/order/image?mobile=${mobile}&service_date=${serviceDate}&service_time=${serviceTime}`)
          .then(response => response.json())
          .then(data => {
            if (data.vehicle_image) {
              const imageContainer = document.createElement("div");
              imageContainer.classList.add("vehicle-image");
              const image = document.createElement("img");
              image.src = data.vehicle_image; // Set the image source
              image.alt = "Vehicle Image"; // Add alt text for accessibility
              image.classList.add("vehicle-img"); // Optional: Add a class for styling
              imageContainer.appendChild(image);
              orderDetailsDiv.appendChild(imageContainer);
            }
          })
          .catch(error => {
            console.error("Error fetching vehicle image:", error);
          });

        // Append the icons to the order details div
        orderDetailsDiv.appendChild(editIcon);
        orderDetailsDiv.appendChild(deleteIcon);

        // Position icons on top right
        editIcon.style.position = "absolute";
        editIcon.style.top = "10px";
        editIcon.style.right = "10px";

        deleteIcon.style.position = "absolute";
        deleteIcon.style.top = "10px";
        deleteIcon.style.right = "40px";

      } else {
        // Handle case where parameters are missing
        orderDetailsDiv.textContent = "Order details not found.";
      }
    });

    function renderEditableOrderDetails(orderData) {
      const orderDetailsContainer = document.getElementById("orderDetails");
      orderDetailsContainer.innerHTML = "";

      const form = document.createElement("form");
      form.id = "editOrderForm";

      const excludedOptions = ["_id", "Pending", "price", "discount", "payable_price", "status", "__v", "quotation"];

      for (const key in orderData) {
        if (!excludedOptions.includes(key)) {
          const inputField = document.createElement("input");
          inputField.type = "text";
          inputField.name = key;
          inputField.value = orderData[key];
          const label = document.createElement("label");
          label.textContent = key.charAt(0).toUpperCase() + key.slice(1); // Capitalize first letter

          const fieldDiv = document.createElement("div");
          fieldDiv.classList.add("form-group");
          fieldDiv.appendChild(label);
          fieldDiv.appendChild(inputField);

          form.appendChild(fieldDiv);
        }
      }

      const submitButton = document.createElement("button");
      submitButton.type = "submit";
      submitButton.textContent = "Save Changes";
      submitButton.classList.add("btn", "btn-primary");

      form.appendChild(submitButton);

      orderDetailsContainer.appendChild(form);

      form.addEventListener("submit", function (event) {
        event.preventDefault();
        const formData = new FormData(form);
        const editedOrderData = {};
        formData.forEach((value, key) => {
          editedOrderData[key] = value;
        });

        fetch("/editorder", {
          method: "POST",
          headers: {
            "Content-Type": "application/json"
          },
          body: JSON.stringify(editedOrderData)
        })
          .then(response => {
            if (!response.ok) {
              throw new Error("Network response was not ok");
            }
            return response.json();
          })
          .then(data => {
            // Reload the page after saving changes
            location.reload();
          })
          .catch(error => {
            console.error("Error:", error);
            alert("An error occurred while saving changes");
          });
      });
    }

    function deleteOrder(mobile) {
      if (confirm("Are you sure you want to delete this order?")) {
        fetch(`/deleteorder?mobile=${mobile}`, {
          method: "DELETE"
        })
          .then(response => {
            if (!response.ok) {
              throw new Error("Network response was not ok");
            }
            return response.json();
          })
          .then(data => {
            alert(data.message);
            window.location.href = '/'
          })
          .catch(error => {
            console.error("Error:", error);
            alert("An error occurred while deleting order");
          });
      }
    }

    function fetchOrderDetails(mobile) {
      const orderDetailsDiv = document.getElementById("orderDetails");

      fetch(`/order/details?mobile=${mobile}`)
        .then(response => {
          if (!response.ok) {
            throw new Error("Network response was not ok");
          }
          return response.json();
        })
        .then(orderData => {
          orderDetailsDiv.innerHTML = `
        <p><strong>Name:</strong> ${orderData.name}</p>
        <p><strong>Mobile:</strong> ${orderData.mobile}</p>
        <p><strong>Location:</strong> ${orderData.location}</p>
        <p><strong>Vehicle Type:</strong> ${orderData.vehicleType}</p>
        <p><strong>Description:</strong> ${orderData.description}</p>
        <p><strong>Vehicle Brand:</strong> ${orderData.vehicleBrand}</p>
        <p><strong>Vehicle Model:</strong> ${orderData.vehicleModel}</p>
        <p><strong>Fuel Type:</strong> ${orderData.fuelType}</p>
        <p><strong>Car Year:</strong> ${orderData.carYear}</p>
        <p><strong>Service Type:</strong> ${orderData.serviceType}</p>
        <p><strong>Service Place Type:</strong> ${orderData.servicePlaceType}</p>
        <p><strong>Address:</strong> ${orderData.address}</p>
        <p><strong>Service Date:</strong> ${new Date(orderData.serviceDate).toLocaleDateString()}</p>
        <p><strong>Service Time:</strong> ${orderData.serviceTime}</p>
        <!-- Add more fields as needed -->
      `;

          // Fetch and display vehicle image
          if (orderData.vehicleImage) {
            const imageContainer = document.createElement("div");
            imageContainer.classList.add("vehicle-image");
            const image = document.createElement("img");
            image.src = orderData.vehicleImage;
            image.alt = "Vehicle Image";
            image.classList.add("vehicle-img");
            imageContainer.appendChild(image);
            orderDetailsDiv.appendChild(imageContainer);
          }

          // Add edit and delete icons
          const editIcon = document.createElement("span");
          editIcon.classList.add("material-symbols-rounded", "edit-icon");
          editIcon.textContent = "edit";
          editIcon.addEventListener("click", function () {
            renderEditableOrderDetails(orderData);
          });

          const deleteIcon = document.createElement("span");
          deleteIcon.classList.add("material-symbols-rounded", "delete-icon");
          deleteIcon.textContent = "delete";
          deleteIcon.addEventListener("click", function () {
            deleteOrder(orderData.mobile);
          });

          orderDetailsDiv.appendChild(editIcon);
          orderDetailsDiv.appendChild(deleteIcon);

          // Position icons on top right
          editIcon.style.position = "absolute";
          editIcon.style.top = "10px";
          editIcon.style.right = "10px";

          deleteIcon.style.position = "absolute";
          deleteIcon.style.top = "10px";
          deleteIcon.style.right = "40px";

        })
        .catch(error => {
          console.error("Error:", error);
          orderDetailsDiv.textContent = "Error fetching order details.";
        });
    }
  </script>

